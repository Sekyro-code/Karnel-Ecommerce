{% extends 'base.html.twig' %}

{% block title %}Compte utilisateur
{% endblock %}

{% block content %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>
			Compte utilisateur âœ…
		</h1>
		<br>
		{% for flashMessage in app.flashes('success') %}
			<div class="alert alert-success">
				{{ flashMessage }}
			</div>
		{% endfor %}
		{% for flashMessage in app.flashes('error') %}
			<div class="alert alert-danger">
				{{ flashMessage }}
			</div>
		{% endfor %}
		{% if app.user != null %}
			<p>Hello
				{{app.user.firstname}}</p>
		{% endif %}
		<br>
		<br>
		<a href="{{path('app_account_password')}}">Modifier le mot de passe
		</a>
		{# {{dump(app.user)}} #}
	</div>
{% endblock %}
